<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2 my-4">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">
        <% if(user) { %>
          Sua lista de contatos.
        <% } else { %>
          Faça login para acessar sua agenda.
        <% } %>
      </p>

      <%- include('includes/messages') %>

      <% if(user && contatos.length > 0) { %>
        <div class="responsive-table">
          <table class="table my-3">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Telefone</th>
                <th>Email</th>
                <th colspan="2">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% contatos.forEach(contato => { %>
                <tr>
                  <td><%= contato.nome %></td>
                  <td><%= contato.sobrenome %></td>
                  <td><%= contato.telefone %></td>
                  <td><%= contato.email %></td>
                  <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                  <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else if(user) { %>
        <p class="text-center lead">Não existem contatos na sua agenda.</p>
      <% } %>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
